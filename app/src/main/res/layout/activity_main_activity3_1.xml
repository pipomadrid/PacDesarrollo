<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music"
    tools:context=".MainActivity3_1">



        <Button
            android:id="@+id/botonVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#9C5F20"
            android:text="@string/BotonVolver3"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/botonPlay"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="120dp"
            android:backgroundTint="#EB7187C1"
            app:layout_constraintBottom_toTopOf="@+id/botonVolver"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/botonPause"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="116dp"
            android:backgroundTint="#EB7187C1"
            app:layout_constraintBottom_toTopOf="@+id/botonVolver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <Button
            android:id="@+id/botonBlock"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="116dp"
            android:backgroundTint="#EB7187C1"
            android:text="@string/BotonBlock"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/botonVolver"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>